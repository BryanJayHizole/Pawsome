@model IEnumerable<Pawsome.Models.RabiesIncident>

<div class="container mt-5 p-4 shadow-lg rounded-lg" style="background: linear-gradient(135deg, #f3f4f6, #ffffff);">
    <h2 class="mb-4 text-center">My Reported Rabies Incidents</h2>

    <div class="row">
        @foreach (var incident in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card shadow-lg border-0 rounded-lg" style="background: linear-gradient(135deg, #ffffff, #e9ecef);">
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(incident.Photo)"
                         alt="Incident Photo"
                         class="card-img-top rounded-top"
                         style="height: 200px; object-fit: cover;"
                         onerror="this.onerror=null; this.src='https://via.placeholder.com/200';" />
                    <div class="card-body">
                        <h5 class="card-title">@incident.Description</h5>
                        <p class="card-text">
                            <strong>Date Reported:</strong> @incident.DateReported.ToShortDateString() <br />
                            <strong>Municipality:</strong> @incident.City <br />
                            <strong>Barangay:</strong> @incident.Barangay <br />
                            <strong>Verified:</strong> @(incident.IsVerified ? "Yes" : "No")
                        </p>
                        <div class="d-flex justify-content-between">
                            <form asp-action="DeleteIncident" asp-route-id="@incident.RabiesIncidentId" method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this incident?');">
                                <button type="submit" class="btn btn-danger btn-sm rounded-pill shadow-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
