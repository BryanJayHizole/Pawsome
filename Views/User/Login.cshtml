<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pawsome</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            background: linear-gradient(to right, #e2e2e2, #ffffff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Ensure full height for body */
        }

        .container {
            flex: 1;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
        }

        .welcome-section {
            flex: 1;
            text-align: left;
            padding: 20px;
        }

            .welcome-section h1 {
                font-size: 3rem;
                color: #0046AD;
            }

            .welcome-section p {
                font-size: 1.2rem;
                margin-top: 15px;
                line-height: 1.8;
            }

        .login-container {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .card {
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        .card-header {
            background-color: #007bff;
            color: #fff;
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
            padding: 1rem;
            font-size: 1.5rem;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .form-control {
            border-radius: 8px;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        }

        .alert {
            border-radius: 8px;
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="welcome-section">
            
            <h1>Welcome to Pawsome!</h1>
            <p>We're glad to have you here. Please log in to access your account and enjoy our services. If you're new to Pawsome, sign up and start managing your pets with ease.</p>
        </div>
        <div class="login-container">
            <div class="card">
                <div class="card-header text-center">
                    <h3 class="card-title mb-0">Login</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" placeholder="Enter your Email" required />
                        </div>
                        <div class="form-group mt-3">
                            <label for="Password">Password</label>
                            <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter your password" required />
                        </div>
                        <div class="form-group mt-3">
                            <div class="form-check">
                                <input type="checkbox" id="RememberMe" name="RememberMe" class="form-check-input" />
                                <label for="RememberMe" class="form-check-label">Remember Me</label>
                            </div>
                        </div>
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-danger">@ViewBag.Message</div>
                        }
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Don't have an account? <a asp-action="Register">Register here</a></p>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    }
</body>
</html>
